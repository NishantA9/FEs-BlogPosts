<%- include("partials/header") %>

<div class="mainBg">
<div class="card border-warning mb-3 card1" style="width: 25rem;">
    <h1 class="post1"> Create New Post</h1>
    <div class="card-body">
        <form action="/create" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label form1">Your Blog Title</label>
            <input type="text" class="form-control" id="title" placeholder="Type the blog title" name="title" required>
          </div>
          <div class="mb-3">
            <label for="content" class="form-label form1">Your Blog Content</label>
            <textarea class="form-control" id="content" rows="3" name="content" placeholder="Type your Blog Content"  required></textarea>
          </div>
          <button type="submit" class="nishButton">Create Post</button>
          <button type="home" class="nishButton"><a href="/">Back to Home</a></button>
          </form>
        </div>
  </div>
</div>

